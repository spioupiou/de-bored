<button id="popup-button" class="d-none" data-toggle="modal" data-target="#popup-modal">Edit nickname</button>
<div class="modal fade" id="popup-modal" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true" data-backdrop="static">
  <div class="modal-dialog modal-dialog-centered">
    <div id="modal" class="modal-content m-auto" style="width: 250px;">
      <div class="modal-body text-center">
        <h5>Update nickname</h5>
        <%= form_with url: create_players_instance_path(instance), local: true, method: :get do |f| %>
          <%= f.text_field :nickname, value: current_user.nickname, id: "user_nickname" %>
          <div class="pt-3">
            <%= f.submit "Use nickname", class: "btn btn-warning" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
