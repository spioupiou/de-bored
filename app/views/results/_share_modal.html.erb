<!-- Button trigger modal -->
<div>
  <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#shareModal" id="share-btn" data-html2canvas-ignore>
    Share
  </button>
</div>

<!-- Modal -->
<div class="modal fade" id="shareModal" tabindex="-1" aria-labelledby="shareModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm modal-dialog-centered">
    <div class="modal-content bg-primary">
      <div class="modal-body" id="share-modal">
        <img id="screenshot" width="100%" style="object-fit:cover;">

        <!-- Facebook/Twitter/Download buttons -->
        <div class="a2a_kit a2a_kit_size_40" data-a2a-title="My game results">
          <a class="a2a_button_twitter mr-2"></a>
          <%= image_tag "logo-save", id: "save-logo", style: "border-radius:14%; height:41px; width:41px; cursor:pointer"%>
        </div>

        <script async src="https://static.addtoany.com/menu/page.js"></script>

      </div>
    </div>
  </div>
</div>
