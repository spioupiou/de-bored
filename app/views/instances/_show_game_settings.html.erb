<h5 class="text-center">Game Settings</h5>

<div class="players d-flex justify-content-between">
  <div>
    <p>Max Players:</p>
  </div>
  <div>
    <%= instance.max_players %>
  </div>
</div>

<div class="rounds d-flex justify-content-between">
  <div>
    <p>Rounds:</p>
  </div>
  <div>
    <%= instance.max_rounds %>
  </div>
</div>

<div class="imposter d-flex justify-content-between">
  <p>Impostor:</p>
  <div id="container-impostor-info">
    <div id="btn-impostor-info" class="btn btn-primary">
      <i class="fas fa-info"></i>
    </div>
    <p>Yes</p>
  </div>
</div>

<div class="d-flex justify-content-between">
  <p>Passcode:</p>
  <p><%= instance.passcode %></p>
</div>
