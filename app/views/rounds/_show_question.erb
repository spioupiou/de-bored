<div class="container-fluid" style="height: 75vh;">
  <div class="d-flex justify-content-center align-items-center h-100">
    <div class="text-center">
      <h5>Round <%= round.number %></h5>
      <h3>Never Have I ever <%= game_content.content %></h3>
      <div class="p-4">

        <div class="row justify-content-center">
          <div class="col-6">
            <%= link_to instance_round_player_inputs_path(input_value: "Yes", round_id: params[:id]), method: :post do %>
              <div class="btn btn-primary">Yes I have</div>
            <% end %>
          </div>

          <div class="col-6">
            <%= link_to instance_round_player_inputs_path(input_value: "No", round_id: params[:id]), method: :post do %>
              <div class="btn btn-warning">No I haven't</div>
            <% end %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
