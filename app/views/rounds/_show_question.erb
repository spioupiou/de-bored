<div class="container-fluid" style="height: 75vh;">
  <div class="d-flex justify-content-center align-items-center h-100">
    <div class="text-center">
      <h5>Round <%= round.number %></h5>
      <h3>Have you ever <%= game_content.content %>?</h3>

      <div class="p-4">
        <div class="row justify-content-center">

          <% @player_input = PlayerInput.new %>

          <div class="col-6">
            <%= simple_form_for([instance, round, @player_input]) do |f| %>
              <%= hidden_field_tag :input_value, "Yes" %>
              <%= f.submit "Yes I have", class:"btn btn-primary" %>
            <% end %>
          </div>

          <div class="col-6">
            <%= simple_form_for([instance, round, @player_input]) do |f| %>
              <%= hidden_field_tag :input_value, "No" %>
              <%= f.submit "No I haven't", class:"btn btn-warning" %>
            <% end %>
          </div>
        </div>

      </div>

    </div>
  </div>
</div>
