<% if @round.phase == 1 %>
  <%= render 'show_question', instance: @instance, round: @round, game_content: @game_content %>

<% elsif @round.phase == 2 %>
  <div class="container-fluid">
    <h3 class="py-4 text-center">This Round's Results</h3>
    <div class="row justify-content-center" style="height: 50vh">
      <div class="col-lg-4 col-md-6 col-sm-12">
        <div id="inputs" data-round-id="<%= @round.id %>">

          <% @round.player_inputs.each do |player_input| %>
            <%= render 'player_inputs/player_input', player_input: player_input %>
          <% end %>

        </div>
      </div>
    </div>


    <div class="row justify-content-center">
        <% @round = Round.new %>
        <%= simple_form_for([@instance, @round]) do |f| %>
      <div class="col-6">
          <%= f.submit "Continue", class:"btn btn-primary" %>
        <% end %>
      </div>

      <%= link_to instances_path(game_id: @game_id), method: :post do %>
      <div class="col-12">
          <p class="btn btn-warning">Exit Game</p>
      </div>
        <% end %>
    </div>

  </div>

<% end %>
